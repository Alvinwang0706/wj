<script type="text/javascript">
function submitp(){
       jQuery.ajax({
           type:'get',
           url:'${Site.prop6}/shop/favorites!add.action?productId=${Article.RiskCode}',
           dataType:'html',
           success:function(de){

           	if(de=='notlogin'){

           		jQuery("#headerShowLoginWindow").click();
           	}else{
           		alert(de);
           	}
           }
        });
    }
   function change(){
   	 document.getElementById("sinosoft_image").src='${Site.prop6}/Services/AuthCode.jsp?Height=18&Width=60&'+new Date().getTime();
   }
function doBuy(){
	var rootEle = document.getElementById("divRiskAppFactor_" + "${Article.RiskCode}");
	var tempURL = "";
	if (rootEle != null) {
		var dc = new DataCollection();
		var ulNodeList = rootEle.getElementsByTagName("UL");
		for ( var i = 0; i < ulNodeList.length; i++) {
			for ( var j = 0; j < ulNodeList[i].childNodes.length; j++) {
				if (ulNodeList[i].childNodes[j].className == "li_selected") {
					var param = ulNodeList[i].id;
					param = param.substring(param.indexOf("_")+1);
					tempURL += "&"+param + "="+ulNodeList[i].childNodes[j].firstChild
					.getAttribute("name")
					continue;
				}
			}

		}
	}
	var supplierCode=${Article.SupplierCode};
	if(supplierCode=='1015'){
		window.location.href="${Site.prop6}/shop/order_config!buyNow.action?productId=${Article.RiskCode}"+tempURL
	}else{
    	window.location.href="${Site.prop6}/shop/order!buyNow.action?productId=${Article.RiskCode}"+tempURL     
	}
}
   
</script>
