function validateData(){
	var name=jQuery("#realName").val();
	var NO=jQuery("#mobile").val();
	var flag=true;
	if(name==""){
		document.getElementById("lottery_result").innerHTML = "真实姓名不能为空!";
		flag =false;
	}else if(NO==""){
		document.getElementById("lottery_result").innerHTML = "手机号不能为空!";
		flag =false;
	}
	var regu = /^[1][3-8][0-9]{9}$/;
	if (!regu.test(NO)) {
		document.getElementById("lottery_result").innerHTML = "请输入正确手机号!";
		flag =false;
	}
	return flag;
}
