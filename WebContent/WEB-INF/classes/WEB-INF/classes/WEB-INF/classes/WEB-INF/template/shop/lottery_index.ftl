function submitp_2(){
	if(validateData()){
		var realName=jQuery("#realName").val();
		var mobile=jQuery("#mobile").val();
		jQuery.ajax({
			url:'${base}/shop/lottery!toDo2.action?realName='+realName+'&mobile='+mobile,
			dataType: "html",
			async: false,
			success: function(data) {
				document.getElementById("lottery_result").innerHTML = data;   
